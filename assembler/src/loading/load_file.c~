#include "asm.h"

void	fill_header(char *dest, char *inst, int size, int err)
{
	int i;
	int j;

	i = 0;
	while (dest[i])
		i++;
	if (err == 2)
	{
		while (inst[j] && inst[j] != '"')
			j++;
		j++;
	}
	else
		dest[i++] = '\n';
	while (inst[j] && inst[j] != '"' && i < size)
		dest[i++] = inst[j++];
}
